      mkdir $(CopyDir)\include\cogl-$(ApiVersion)\cogl-pango
      copy ..\..\..\cogl-pango\cogl-pango.h $(CopyDir)\include\cogl-$(ApiVersion)\cogl-pango


      mkdir $(CopyDir)\include\cogl-$(ApiVersion)\cogl-path
